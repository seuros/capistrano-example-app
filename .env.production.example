# Production Environment Variables
# Copy to .env.production and configure

# Rails
RAILS_ENV=production
RACK_ENV=production
RAILS_MASTER_KEY=your_master_key_here
RAILS_SERVE_STATIC_FILES=false
RAILS_LOG_TO_STDOUT=true

# Database
DATABASE_URL=postgresql://deploy:password@localhost/sample_app_production

# Redis (for Sidekiq)
REDIS_URL=redis://localhost:6379/0

# Puma
WEB_CONCURRENCY=2
RAILS_MAX_THREADS=16
RAILS_MIN_THREADS=0
PUMA_PORT=9292
PUMA_SOCKET_PATH=/home/deploy/production/shared/tmp/sockets/puma.sock
PUMA_CONTROL_PATH=/home/deploy/production/shared/tmp/sockets/pumactl.sock

# Sidekiq
SIDEKIQ_CONCURRENCY=25
SIDEKIQ_HEAVY_CONCURRENCY=5
SIDEKIQ_LABEL=production
MALLOC_ARENA_MAX=2

# Application
SECRET_KEY_BASE=your_secret_key_base
APP_HOST=example.com
FORCE_SSL=true

# Email
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_DOMAIN=example.com

# Monitoring (optional)
NEW_RELIC_LICENSE_KEY=your_new_relic_key
ROLLBAR_ACCESS_TOKEN=your_rollbar_token
SENTRY_DSN=your_sentry_dsn

# Storage (if using Active Storage)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_BUCKET=your-bucket-name